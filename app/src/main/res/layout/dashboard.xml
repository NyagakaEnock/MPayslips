<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/home_root"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
    android:background="@drawable/bg">
    <RelativeLayout
        android:id="@+id/nav_header_container"
        android:layout_width="match_parent"
        android:layout_height="109dp"
        android:layout_alignParentTop="true"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageView2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/imageView2"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_alignParentBottom="true">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nyagaka Enock"
                    style="@style/App_TextViewStyle"
                    android:id="@+id/username"
                    android:singleLine="false"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff29549f"/>


            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Staff ID 454548"
                    style="@style/App_TextViewStyle"
                    android:id="@+id/staffidNumber"
                    android:layout_marginLeft="2dp"
                    android:textColor="#ff29549f"
                    />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Period 2016/09"
                    style="@style/App_TextViewStyle"
                    android:id="@+id/txtPeriod"
                    android:layout_marginLeft="2dp"
                    android:textColor="#111"/>


            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"></TableRow>
        </TableLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ff29549f"/>
<include layout="@layout/dashboard_layout"/>
<include layout="@layout/footer_layout"/>
</LinearLayout>